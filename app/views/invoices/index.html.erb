
<!-- Page header -->
<div class="sm:flex sm:justify-between sm:items-center mb-5">

    <!-- Left: Title -->
    <div class="mb-4 sm:mb-0">
        <h1 class="text-2xl md:text-3xl text-slate-800 font-bold"><%= t("facturas") %> âœ¨</h1>
    </div>

    <!-- Right: Actions -->
    <div class="grid grid-flow-col sm:auto-cols-max justify-start sm:justify-end gap-2">

        <!-- Sort and Search -->
        <% unless @invoices.none? %>
            <div class="relative">
                <%= form_with url: "", method: :get, data: { turbo_frame: "invoices", turbo_action: "advance" } do |form| %>
                    <!-- Search form -->
                    <label for="action-search" class="sr-only"><%= t("buscar") %></label>
                    <%= form.search_field :query, value: params[:query], oninput: "this.form.requestSubmit()", class: "form-input pl-9 focus:border-slate-300", placeholder: t("buscar_factura") %>
                    <button class="absolute inset-0 right-auto group" type="submit" aria-label="Search">
                        <svg class="w-4 h-4 shrink-0 fill-current text-slate-500 group-hover:text-slate-500 ml-3 mr-2" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
                            <path d="M7 14c-3.86 0-7-3.14-7-7s3.14-7 7-7 7 3.14 7 7-3.14 7-7 7zM7 2C4.243 2 2 4.243 2 7s2.243 5 5 5 5-2.243 5-5-2.243-5-5-5z" />
                            <path d="M15.707 14.293L13.314 11.9a8.019 8.019 0 01-1.414 1.414l2.393 2.393a.997.997 0 001.414 0 .999.999 0 000-1.414z" />
                        </svg>
                    </button>
                    <!-- Sort --> 
                    <label for="action-search" class="sr-only"><%= t("cantidad_por_pagina") %></label>
                    <%= form.select :count, options_for_select([10, 25, 50, 100], selected: params[:count]), {}, {class: "form-input pr-7 focus:border-slate-300 text-slate-500", onchange: "this.form.requestSubmit()"} %>
                <% end %>
            </div>
        <% end %>
        <!-- Create invoice button -->
        <button class="btn bg-indigo-500 hover:bg-indigo-600 text-white">
            <svg class="w-4 h-4 fill-current opacity-50 shrink-0" viewBox="0 0 16 16">
                <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z" />
            </svg>
            <span class="xs:block ml-2"><%= link_to  t("nueva_factura"), new_invoice_path %></span>
        </button>

    </div>

</div>

<!-- More actions -->
<div class="sm:flex sm:justify-between sm:items-center mb-5">
    <% unless @invoices.none? %>
        <!-- Left side -->
        <div class="mb-4 sm:mb-0 hidden">
            <ul class="flex flex-wrap -m-1">
                <li class="m-1">
                    <button class="inline-flex items-center justify-center text-sm font-medium leading-5 rounded-full px-3 py-1 border border-transparent shadow-sm bg-indigo-500 text-white duration-150 ease-in-out"><%= t("todas") %> <span class="ml-1 text-indigo-200">67</span></button>
                </li>
                <li class="m-1">
                    <button class="inline-flex items-center justify-center text-sm font-medium leading-5 rounded-full px-3 py-1 border border-slate-200 hover:border-slate-300 shadow-sm bg-white text-slate-500 duration-150 ease-in-out"><%= t("pagadas") %> <span class="ml-1 text-slate-400">14</span></button>
                </li>
                <li class="m-1">
                    <button class="inline-flex items-center justify-center text-sm font-medium leading-5 rounded-full px-3 py-1 border border-slate-200 hover:border-slate-300 shadow-sm bg-white text-slate-500 duration-150 ease-in-out"><%= t("por_vencer") %> <span class="ml-1 text-slate-400">34</span></button>
                </li>
                <li class="m-1">
                    <button class="inline-flex items-center justify-center text-sm font-medium leading-5 rounded-full px-3 py-1 border border-slate-200 hover:border-slate-300 shadow-sm bg-white text-slate-500 duration-150 ease-in-out"><%= t("vencidas") %> <span class="ml-1 text-slate-400">19</span></button>
                </li>
            </ul>
        </div>

        <!-- Right side -->
        <div class="grid grid-flow-col sm:auto-cols-max justify-start sm:justify-end gap-2">

            <!-- Delete button -->
            <div class="table-items-action hidden">
                <div class="flex items-center">
                    <div class="hidden xl:block text-sm italic mr-2 whitespace-nowrap"><span class="table-items-count"></span> <%= t("facturas_seleccionadas") %></div>
                    <button class="btn bg-white border-slate-200 hover:border-slate-300 text-rose-500 hover:text-rose-600"><%= t("borrar") %></button>
                </div>
            </div>                     
        </div>
    <% end %>
</div>

<!-- Table -->
<%= turbo_frame_tag "invoices" do %>
    <div class="bg-white shadow-lg rounded-sm border border-slate-200 mb-8">
        <div x-data="handleSelect">

            <!-- Table -->
            <div class="overflow-x-auto">

                <% if @invoices.none? %>
                    <%= render "shared/empty_state", title: t("no_hay_facturas"), text: t("no_hay_facturas_texto"), button_text: t("nueva_factura"), the_link: new_invoice_path %>
                <% else %>
                    <table class="table-auto w-full">
                        <!-- Table header -->
                        <thead class="text-xs font-semibold uppercase text-slate-500 bg-slate-50 border-t border-b border-slate-200">
                            <tr>
                                <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap w-px">
                                    <div class="flex items-center">
                                        <label class="inline-flex">
                                            <span class="sr-only"><%= t("seleccionar_todos") %></span>
                                            <input id="parent-checkbox" class="form-checkbox" type="checkbox" @click="toggleAll" />
                                        </label>
                                    </div>
                                </th>
                                <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                    <div class="font-semibold text-left relative <%= "text-indigo-500" if params[:sort] == "invoice_number" %>">
                                        <%= sort_link_to t("numero"), :invoice_number, data: { turbo_action: "advance" } %>
                                        <span class="absolute top-0 left-13">
                                            <%= sort_indicator if params[:sort] == "invoice_number" %>
                                        </span>
                                    </div>
                                </th>
                                <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                    <div class="font-semibold text-left relative <%= "text-indigo-500" if params[:sort] == "total" %>">
                                        <%= sort_link_to t("total"), :total, data: { turbo_action: "advance" } %>
                                        <span class="absolute top-0 left-10">
                                            <%= sort_indicator if params[:sort] == "total" %>
                                        </span>
                                    </div>
                                </th>
                                <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                    <div class="font-semibold text-left relative <%= "text-indigo-500" if params[:sort] == "status" %>">
                                        <%= sort_link_to t("estatus"), :status, data: { turbo_action: "advance" } %>
                                        <span class="absolute top-0 left-14">
                                            <%= sort_indicator if params[:sort] == "status" %>
                                        </span>
                                    </div>
                                </th>
                                <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                    <div class="font-semibold text-left">
                                        <%= t("cliente") %>
                                    </div>
                                </th>
                                <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                    <div class="font-semibold text-left relative <%= "text-indigo-500" if params[:sort] == "date" %>">
                                        <%= sort_link_to t("emitida"), :date, data: { turbo_action: "advance" } %>
                                        <span class="absolute top-0 left-12">
                                            <%= sort_indicator if params[:sort] == "date" %>
                                        </span>
                                    </div>
                                </th>
                                <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                    <div class="font-semibold text-left relative <%= "text-indigo-500" if params[:sort] == "due_date" %>">
                                        <%= sort_link_to t("vencimiento"), :due_date, data: { turbo_action: "advance" } %>
                                        <span class="absolute top-0 left-18">
                                            <%= sort_indicator if params[:sort] == "due_date" %>
                                        </span>
                                    </div>
                                </th>
                                <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                    <div class="font-semibold text-left"><%= t("acciones") %></div>
                                </th>
                            </tr>
                        </thead>
                        <!-- Table body -->
                        <tbody class="text-sm divide-y divide-slate-200">
                            <!-- Row -->
                        <%= render @invoices %>
                        </tbody>
                    </table>
                <% end %>
            </div>
        </div>
    </div>
<% end %>
<!-- Pagination -->
<% unless @invoices.none? %>
    <%= render "shared/pagination", item_name: t('factura') %>
<% end %>
<script>
    // A basic demo function to handle "select all" functionality
    document.addEventListener('alpine:init', () => {
        Alpine.data('handleSelect', () => ({
            selectall: false,
            selectAction() {
                countEl = document.querySelector('.table-items-action');
                if (!countEl) return;
                checkboxes = document.querySelectorAll('input.table-item:checked');
                document.querySelector('.table-items-count').innerHTML = checkboxes.length;
                if (checkboxes.length > 0) {
                    countEl.classList.remove('hidden');
                } else {
                    countEl.classList.add('hidden');
                }
            },
            toggleAll() {
                this.selectall = !this.selectall;
                checkboxes = document.querySelectorAll('input.table-item');
                [...checkboxes].map((el) => {
                    el.checked = this.selectall;
                });
                this.selectAction();
            },
            uncheckParent() {
                this.selectall = false;
                document.getElementById('parent-checkbox').checked = false;
                this.selectAction();
            }
        }))
    })    
</script>
