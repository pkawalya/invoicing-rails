<% content_for(:html_title) { 'Ítems' } %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h2 class="font-bold text-xl">Lista de ítems</h2>
    <%= link_to 'Nuevo ítem', new_item_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="items" class="min-w-full">
    <%= render @items %>
  </div>
</div>
