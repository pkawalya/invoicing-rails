<%= turbo_stream.replace target="invoice_line_items_attributes_#{@target}_price" do %>
    <input class="form-input w-full" readonly data-recalculate-target="price" data-itemselect-target="select" type="text" name="invoice[line_items_attributes][<%=@target%>][price]" id="invoice_line_items_attributes_<%=@target%>_price" value="<%= @item&.price %>">
<% end %>

<%= turbo_stream.replace target="invoice_line_items_attributes_#{@target}_iva" do %>
    <input class="form-input w-full" readonly data-recalculate-target="iva" type="text" name="invoice[line_items_attributes][<%=@target%>][iva]" id="invoice_line_items_attributes_<%=@target%>_iva" value="<%= @item&.iva %>">
<% end %>

<%= turbo_stream.replace target="invoice_line_items_attributes_#{@target}_quantity" do %>
    <input min="0" max="10000000" step=1 class="form-input w-full" data-action="change->recalculate#recalculate" data-removeitem-target="qty" data-recalculate-target="qty"
    type="number" name="invoice[line_items_attributes][<%=@target%>][quantity]" id="invoice_line_items_attributes_<%=@target%>_quantity" value="0">
<% end %>
