<%= form_with(model: item, class: "contents") do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :item_name, class: "input-label" %>
    <%= form.text_field :item_name, class: "input" %>
  </div>

  <div class="my-5">
    <%= form.label :description, class: "input-label" %>
    <%= form.text_area :description, rows: 10, cols: 60, class: "input" %>
  </div>

  <div class="my-5">
    <%= form.label :price, class: "input-label" %>
    <%= form.text_field :price, class: "input" %>
  </div>

  <div class="my-5">
    <%= form.label :iva, class: "input-label" %>
    <%= form.text_field :iva, class: "input" %>
  </div>

  <div class="my-5">
    <%= form.label :irpf, class: "input-label" %>
    <%= form.text_field :irpf, class: "input" %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn-primary"%>
  </div>
<% end %>
