<% if @user_profile.is_freelance %>
<% content_for(:page_title, "Tu Nombre Completo") %>
<% else %>
<% content_for(:page_title, "Datos de la Empresa") %>
<% end %>
<%= form_for(@user_profile, url: wizard_path, method: 'put' ) do |f| %>
  <% if f.object.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(f.object.errors.count, "error") %> prohibited this invoice from being saved:</h2>
      <ul>
        <% f.object.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @user_profile.is_freelance %>
    <div class="my-5">
      <%= f.label "Nombres", class: "input-label" %>
      <%= f.text_field :first_name, class: "input", required: true %>
    </div>
    <div class="my-5">
      <%= f.label "Apellidos", class: "input-label" %>
      <%= f.text_field :last_name, class: "input", required: true %>
    </div>
    <div class="my-5">
        <%= f.label "NIF รณ NIE", class: "input-label" %>
        <%= f.text_field :gov_id, class: "input", required: true %>
    </div>
  <% else %>
    <div class="my-5">
      <%= f.label "Nombre de la Empresa", class: "input-label" %>
      <%= f.text_field :company_name, class: "input", required: true %>
    </div>
    <div class="my-5">
        <%= f.label "CIF", class: "input-label" %>
        <%= f.text_field :gov_id, class: "input", required: true %>
    </div>
    <div class="my-5">
      <%= f.label "Datos Representante Legal", class: "input-label" %>
      <%= f.text_field :first_name, class: "input", placeholder: "Nombres", required: true %>
    </div>
    <div class="my-5">
      <%= f.text_field :last_name, class: "input", placeholder: "Apellidos", required: true %>
    </div>
  <% end %>

  <%= f.submit 'Siguiente', class: 'btn-primary' %>
<% end %>
<%= render "after_register/links" %>