    <div class="hidden grow" data-tabs-target="panel">

        <!-- Panel body -->
        <div class="p-6 space-y-6">
            <h2 class="text-2xl text-slate-800 font-bold mb-5"><%= t("direccion_fiscal")%></h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <% if f.object.errors.any? %>
                    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
                        <h2><%= pluralize(f.object.errors.count, "error") %> prohibited this invoice from being saved:</h2>

                        <ul>
                        <% f.object.errors.each do |error| %>
                            <li><%= error.full_message %></li>
                        <% end %>
                        </ul>
                    </div>
                <% end %>
                <%= f.fields_for :user_profile, resource.user_profile do |upf| %>
                    <div data-controller="select" data-select-url-value="<%= regions_path %>" data-select-param-value="country">
                        <div class="my-5">
                            <%= upf.label "País", class: "input-label" %>
                            <%= upf.collection_select :country, Country.all.sort, :alpha_2_code, :name,
                            { prompt: "Selecciona País"}, { data: {action: "change->select#change"}, class: "input", name: "[user_profile][country]"} %>
                        </div>
                        <div class="my-5">
                            <%= upf.label "Provincia", class: "input-label" %>
                            <%= upf.select :region, [], {}, { data: { select_target: "select" }, class: "input", name: "[user_profile][region]"}%>
                        </div>
                    </div>        
                    <div class="my-5">
                        <label class="input-label" for="city">Ciudad <span class="text-rose-500">*</span></label>
                        <%= upf.text_field :city, class: "input", name: "[user_profile][city]", required: true %>
                    </div>
                    <div class="my-5">
                        <label class="input-label" for="postal_code">Código Postal <span class="text-rose-500">*</span></label>
                        <%= upf.text_field :postal_code, class: "input", name: "[user_profile][postal_code]", required: true %>
                    </div>
                    <div class="my-5">
                        <label class="input-label" for="street_address_1">Calle <span class="text-rose-500">*</span></label>
                        <%= upf.text_field :street_address_1, class: "input", name: "[user_profile][street_address_1]", required: true %>
                    </div>
                    <div class="my-5">
                        <label class="input-label" for="street_address_2">Urbanización <span class="text-rose-500">*</span></label>
                        <%= upf.text_field :street_address_2, name: "[user_profile][street_address_2]", class: "input" %>
                    </div>
                <% end %>
                <div class="flex flex-col px-6 py-5 border-t border-slate-200 mt-10">
                    <div class="flex self-end">
                    <%= f.submit "Guardar Cambios", class: "btn bg-indigo-500 hover:bg-indigo-600 text-white ml-3" %>
                    </div>
                </div>
            <% end %>


        </div> 

    </div>   