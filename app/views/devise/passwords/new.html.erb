<% content_for(:page_title, t("forgot_password?")) %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="form-group">
    <%= render "devise/shared/error_messages", resource: resource %>

    <p class="font-light text-sm text-center text-gray-600 mb-4">
      <%= t("forgot_password_instructions")%>
    </p>

    <div class="mb-4">
      <%= f.label :email, t("email"), class: "input-label" %>
      <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "form-input w-full" %>
    </div>

    <div class="grid justify-items-end mt-6">
      <%= f.submit t("send_instructions"), class: "btn bg-indigo-500 hover:bg-indigo-600 text-white" %>
    </div>
  </div>
<% end %>
<!-- Footer -->
<div class="pt-5 mt-6 border-t border-slate-200">
  <div class="text-sm">
    <%= t("remember_password?")%>
    <%= link_to t("login"), new_user_session_path, class: "font-medium text-indigo-500 hover:text-indigo-600" %>.
  </div>
</div>